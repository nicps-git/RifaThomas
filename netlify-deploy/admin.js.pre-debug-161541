// ========================================================================================
// üîÑ SISTEMA DE AUTO-SYNC - IMPLEMENTA√á√ÉO COMPLETA
// ========================================================================================

// Configura√ß√£o do auto-sync
let autoSyncConfig = {
    enabled: true,        // Ativo por padr√£o
    interval: 30000,      // 30 segundos
    timer: null,          // Timer interno
    lastUpdate: null,     // √öltima atualiza√ß√£o
    isUpdating: false     // Flag de controle
};

// Inicializar sistema de auto-sync
function initializeAutoSync() {
    console.log('üîÑ Inicializando sistema de auto-sync...');
    
    try {
        // Recuperar estado salvo
        const savedState = localStorage.getItem('adminAutoSyncEnabled');
        if (savedState !== null) {
            autoSyncConfig.enabled = JSON.parse(savedState);
        }
        
        // Configurar indicadores visuais
        updateSyncIndicators();
        
        // Iniciar auto-sync se habilitado
        if (autoSyncConfig.enabled) {
            startAutoSync();
        }
        
        console.log('‚úÖ Sistema de auto-sync inicializado');
        
    } catch (error) {
        console.error('‚ùå Erro ao inicializar auto-sync:', error);
    }
}

// Atualiza√ß√£o manual de dados
function refreshData() {
    console.log('üîÑ [REFRESH] Atualizando dados manualmente...');
    
    // Evitar m√∫ltiplas atualiza√ß√µes simult√¢neas
    if (autoSyncConfig.isUpdating) {
        console.log('‚ö†Ô∏è Atualiza√ß√£o j√° em andamento...');
        showNotification('‚ö†Ô∏è Atualiza√ß√£o j√° em andamento', 'warning');
        return;
    }
    
    autoSyncConfig.isUpdating = true;
    showSyncProgress(0, 'Iniciando atualiza√ß√£o...');
    
    try {
        // Atualizar progresso
        showSyncProgress(25, 'Carregando dados...');
        
        // Carregar dados baseado na disponibilidade do Firebase
        if (adminData.firebaseReady && window.FirebaseDB) {
            showSyncProgress(50, 'Carregando do Firebase...');
            loadDataFromFirebase();
        } else {
            showSyncProgress(50, 'Carregando dados locais...');
            loadParticipants();
            updateDashboard();
        }
        
        // Finalizar progresso
        showSyncProgress(75, 'Atualizando interface...');
        setTimeout(() => {
            showSyncProgress(100, 'Conclu√≠do!');
            autoSyncConfig.lastUpdate = new Date();
            updateSyncIndicators();
            
            setTimeout(() => {
                hideSyncProgress();
                autoSyncConfig.isUpdating = false;
                showNotification('üîÑ Dados atualizados com sucesso!', 'success');
            }, 500);
        }, 300);
        
    } catch (error) {
        console.error('‚ùå Erro ao atualizar dados:', error);
        hideSyncProgress();
        autoSyncConfig.isUpdating = false;
        showNotification('‚ùå Erro ao atualizar dados: ' + error.message, 'error');
    }
}

// Toggle do auto-sync
function toggleAutoSync() {
    console.log('üîÑ Toggle auto-sync...');
    
    autoSyncConfig.enabled = !autoSyncConfig.enabled;
    
    // Salvar estado
    localStorage.setItem('adminAutoSyncEnabled', JSON.stringify(autoSyncConfig.enabled));
    
    if (autoSyncConfig.enabled) {
        startAutoSync();
        showNotification('‚ñ∂Ô∏è Auto-sync ativado', 'success');
    } else {
        stopAutoSync();
        showNotification('‚è∏Ô∏è Auto-sync pausado', 'warning');
    }
    
    updateSyncIndicators();
}

// Iniciar auto-sync
function startAutoSync() {
    console.log('‚ñ∂Ô∏è Iniciando auto-sync...');
    
    // Parar timer anterior se existir
    if (autoSyncConfig.timer) {
        clearInterval(autoSyncConfig.timer);
    }
    
    // Configurar novo timer
    autoSyncConfig.timer = setInterval(() => {
        // Verificar se a p√°gina est√° vis√≠vel
        if (document.hidden) {
            console.log('üìÑ P√°gina n√£o vis√≠vel, pulando auto-sync');
            return;
        }
        
        // Verificar se n√£o h√° atualiza√ß√£o em andamento
        if (!autoSyncConfig.isUpdating) {
            console.log('‚è∞ Executando auto-sync...');
            refreshData();
        } else {
            console.log('‚ö†Ô∏è Auto-sync pulado - atualiza√ß√£o em andamento');
        }
    }, autoSyncConfig.interval);
    
    console.log(`‚úÖ Auto-sync ativo (${autoSyncConfig.interval / 1000}s)`);
}

// Parar auto-sync
function stopAutoSync() {
    console.log('‚è∏Ô∏è Parando auto-sync...');
    
    if (autoSyncConfig.timer) {
        clearInterval(autoSyncConfig.timer);
        autoSyncConfig.timer = null;
    }
    
    console.log('‚úÖ Auto-sync parado');
}

// Recarregamento completo da p√°gina
function forceFullRefresh() {
    const confirmed = confirm('üîÉ Recarregar a p√°gina completamente?\n\nIsso ir√° recarregar toda a interface.');
    
    if (confirmed) {
        console.log('üîÉ Recarregando p√°gina...');
        showNotification('üîÉ Recarregando p√°gina...', 'info');
        
        setTimeout(() => {
            location.reload();
        }, 1000);
    }
}

// Mostrar estat√≠sticas detalhadas
function showDataStats() {
    console.log('üìä Mostrando estat√≠sticas...');
    
    try {
        const stats = calculateStats();
        
        const statsMessage = `üìä ESTAT√çSTICAS DETALHADAS:

üë• Participantes: ${stats.totalParticipants}
üí∞ Receita Total: ${formatCurrency(stats.totalRevenue)}
üéØ N√∫meros Vendidos: ${stats.soldNumbers}
üìà Taxa de Conclus√£o: ${stats.completionRate}%

üî• Status Firebase: ${adminData.firebaseReady ? '‚úÖ Conectado' : '‚ùå Desconectado'}
üîÑ Auto-sync: ${autoSyncConfig.enabled ? 'üü¢ Ativo' : 'üî¥ Pausado'}
‚è∞ √öltima Atualiza√ß√£o: ${autoSyncConfig.lastUpdate ? autoSyncConfig.lastUpdate.toLocaleTimeString('pt-BR') : 'Nunca'}
‚ö° Intervalo Auto-sync: ${autoSyncConfig.interval / 1000} segundos

üìã Breakdown por Status:
‚Ä¢ Pendentes: ${adminData.purchases.filter(p => p.status === 'pending_donation').length}
‚Ä¢ Confirmadas: ${adminData.purchases.filter(p => p.status === 'confirmed').length}
‚Ä¢ Rejeitadas: ${adminData.purchases.filter(p => p.status === 'rejected').length}`;

        alert(statsMessage);
        
    } catch (error) {
        console.error('‚ùå Erro ao calcular estat√≠sticas:', error);
        showNotification('‚ùå Erro ao calcular estat√≠sticas', 'error');
    }
}

// Mostrar progresso da sincroniza√ß√£o
function showSyncProgress(percentage, status) {
    // Primeira barra de progresso (na se√ß√£o de controles)
    const progressDiv = document.getElementById('sync-progress');
    const progressBar = document.getElementById('sync-progress-bar');
    const progressText = document.getElementById('sync-status-text');
    
    if (progressDiv && progressBar) {
        progressDiv.style.display = 'block';
        progressBar.style.width = percentage + '%';
        
        if (progressText) {
            progressText.textContent = status || `${percentage}%`;
        }
    }
    
    // Segunda barra de progresso (na se√ß√£o principal)
    const progressDivMain = document.getElementById('sync-progress-main');
    const progressBarMain = document.getElementById('sync-progress-bar-main');
    const progressTextMain = document.getElementById('sync-progress-text-main');
    
    if (progressDivMain && progressBarMain) {
        progressDivMain.style.display = 'block';
        progressBarMain.style.width = percentage + '%';
        
        if (progressTextMain) {
            progressTextMain.textContent = status || `${percentage}%`;
        }
    }
    
    console.log(`üìä Progresso: ${percentage}% - ${status}`);
}

// Esconder progresso da sincroniza√ß√£o
function hideSyncProgress() {
    const progressDiv = document.getElementById('sync-progress');
    if (progressDiv) {
        progressDiv.style.display = 'none';
    }
    
    const progressDivMain = document.getElementById('sync-progress-main');
    if (progressDivMain) {
        progressDivMain.style.display = 'none';
    }
}

// Atualizar indicadores visuais do auto-sync
function updateSyncIndicators() {
    // Atualizar status do auto-sync (primeiro na se√ß√£o de controles)
    const statusElement = document.getElementById('auto-sync-status');
    if (statusElement) {
        if (autoSyncConfig.enabled) {
            statusElement.textContent = 'üü¢ Auto-sync Ativo';
            statusElement.style.background = '#28a745';
        } else {
            statusElement.textContent = 'üî¥ Auto-sync Pausado';
            statusElement.style.background = '#dc3545';
        }
    }
    
    // Atualizar status do auto-sync (se√ß√£o principal)
    const statusElementMain = document.getElementById('auto-sync-status-main');
    if (statusElementMain) {
        if (autoSyncConfig.enabled) {
            statusElementMain.textContent = 'üü¢ Auto-sync Ativo';
            statusElementMain.style.background = '#28a745';
        } else {
            statusElementMain.textContent = 'üî¥ Auto-sync Pausado';
            statusElementMain.style.background = '#dc3545';
        }
    }
    
    // Atualizar bot√£o de toggle (primeiro)
    const toggleButton = document.getElementById('auto-sync-btn');
    if (toggleButton) {
        if (autoSyncConfig.enabled) {
            toggleButton.textContent = '‚è∏Ô∏è Pausar Auto-sync';
            toggleButton.style.background = '#ffc107';
            toggleButton.style.color = '#000';
        } else {
            toggleButton.textContent = '‚ñ∂Ô∏è Ativar Auto-sync';
            toggleButton.style.background = '#28a745';
            toggleButton.style.color = '#fff';
        }
    }
    
    // Atualizar bot√£o de toggle (principal)
    const toggleButtonMain = document.getElementById('auto-sync-btn-main');
    if (toggleButtonMain) {
        if (autoSyncConfig.enabled) {
            toggleButtonMain.textContent = '‚è∏Ô∏è Pausar Auto-sync';
            toggleButtonMain.style.background = '#ffc107';
            toggleButtonMain.style.color = '#000';
        } else {
            toggleButtonMain.textContent = '‚ñ∂Ô∏è Ativar Auto-sync';
            toggleButtonMain.style.background = '#28a745';
            toggleButtonMain.style.color = '#fff';
        }
    }
    
    // Atualizar timestamp da √∫ltima atualiza√ß√£o (ambos)
    const timeString = autoSyncConfig.lastUpdate ? 
        `√öltima atualiza√ß√£o: ${autoSyncConfig.lastUpdate.toLocaleTimeString('pt-BR')}` : 
        'Primeira execu√ß√£o...';
        
    const timeElement = document.getElementById('last-update-time');
    if (timeElement) {
        timeElement.textContent = timeString;
    }
    
    const timeElementMain = document.getElementById('last-update-time-main');
    if (timeElementMain) {
        timeElementMain.textContent = timeString;
    }
}

// Calcular estat√≠sticas
function calculateStats() {
    const confirmedPurchases = adminData.purchases.filter(p => p.status === 'confirmed');
    
    const soldNumbers = confirmedPurchases.reduce((total, purchase) => {
        return total + (purchase.numbers ? purchase.numbers.length : 0);
    }, 0);
    
    const totalRevenue = confirmedPurchases.reduce((total, purchase) => {
        return total + (purchase.totalAmount || 0);
    }, 0);
    
    const completionRate = adminData.config.totalNumbers > 0 
        ? ((soldNumbers / adminData.config.totalNumbers) * 100).toFixed(1)
        : 0;
    
    return {
        totalParticipants: confirmedPurchases.length,
        soldNumbers,
        totalRevenue,
        completionRate
    };
}

// Carregar dados do Firebase
async function loadDataFromFirebase() {
    try {
        console.log('üî• Carregando dados do Firebase...');
        
        // Carregar compras - m√©todo correto √© loadPurchases()
        const purchasesResult = await window.FirebaseDB.loadPurchases();
        if (purchasesResult.success) {
            adminData.purchases = purchasesResult.data;
            console.log(`‚úÖ ${purchasesResult.data.length} compras carregadas do Firebase`);
        } else {
            console.warn('‚ö†Ô∏è Erro ao carregar compras:', purchasesResult.error);
        }
        
        // Carregar configura√ß√µes - m√©todo correto √© loadConfig()
        const configResult = await window.FirebaseDB.loadConfig();
        if (configResult.success) {
            adminData.config = { ...adminData.config, ...configResult.data };
            console.log('‚úÖ Configura√ß√µes carregadas do Firebase');
        }
        
        // Atualizar interface
        loadParticipants();
        updateDashboard();
        
    } catch (error) {
        console.error('‚ùå Erro ao carregar dados do Firebase:', error);
        throw error; // Re-throw para o auto-sync capturar
    }
}

