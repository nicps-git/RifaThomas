/**
 * Filtrar participantes por status
 */
function filterParticipants(status) {
    console.log('üîç Filtrando por status:', status);
    
    // Atualizar bot√µes ativos
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.classList.remove('active');
    });
    
    const activeBtn = document.getElementById('filter-' + status);
    if (activeBtn) {
        activeBtn.classList.add('active');
    }
    
    // Recarregar tabela com filtro
    loadParticipants(status);
}

/**
 * Editar dados de um participante
 */
async function editParticipant(purchaseId) {
    console.log('‚úèÔ∏è Editando participante:', purchaseId);
    
    const purchase = adminData.purchases.find(p => p.id === purchaseId);
    if (!purchase) {
        showNotification('‚ùå Participante n√£o encontrado', 'error');
        return;
    }
    
    const currentName = purchase.buyerName || purchase.name || '';
    const currentPhone = purchase.buyerPhone || purchase.phone || '';
    
    const newName = prompt('Nome do participante:', currentName);
    if (!newName || newName.trim() === '') {
        showNotification('‚ö†Ô∏è Nome √© obrigat√≥rio', 'warning');
        return;
    }
    
    const newPhone = prompt('WhatsApp do participante:', currentPhone);
    if (!newPhone || newPhone.trim() === '') {
        showNotification('‚ö†Ô∏è WhatsApp √© obrigat√≥rio', 'warning');
        return;
    }
    
    try {
        const updateData = {
            buyerName: newName.trim(),
            buyerPhone: newPhone.trim(),
            // Manter compatibilidade
            name: newName.trim(),
            phone: newPhone.trim(),
            updatedAt: new Date().toISOString()
        };
        
        // Tentar atualizar no Firebase se dispon√≠vel
        if (typeof window.FirebaseDB !== 'undefined' && adminData.firebaseReady) {
            const result = await window.FirebaseDB.updatePurchase(purchaseId, updateData);
            if (!result.success) {
                throw new Error(result.error);
            }
            
            showNotification('‚úÖ Dados atualizados com sucesso!', 'success');
        } else {
            // Fallback para localStorage
            Object.assign(purchase, updateData);
            localStorage.setItem('purchases', JSON.stringify(adminData.purchases));
            
            showNotification('‚úÖ Dados atualizados (local)!', 'success');
        }
        
        // Atualizar interface
        loadParticipants();
        updateDashboard();
        
        console.log('‚úÖ Participante editado com sucesso');
        
    } catch (error) {
        console.error('‚ùå Erro ao editar:', error);
        showNotification(`‚ùå Erro ao editar: ${error.message}`, 'error');
    }
}

/**
 * Reset de todos os n√∫meros (fun√ß√£o administrativa)
 */
async function resetAllNumbers() {
    const confirmation = confirm(
        '‚ö†Ô∏è ATEN√á√ÉO: Esta a√ß√£o ir√° resetar TODOS os n√∫meros e APAGAR todos os participantes!\n\n' +
        'Esta a√ß√£o n√£o pode ser desfeita!\n\n' +
        'Tem certeza que deseja continuar?'
    );
    
    if (!confirmation) {
        console.log('‚ùå Reset cancelado pelo usu√°rio');
        return;
    }
    
    const doubleConfirmation = confirm(
        'üö® √öLTIMA CONFIRMA√á√ÉO:\n\n' +
        'TODOS os dados dos participantes ser√£o PERDIDOS!\n\n' +
        'Confirmar reset completo?'
    );
    
    if (!doubleConfirmation) {
        console.log('‚ùå Reset cancelado na confirma√ß√£o dupla');
        return;
    }
    
    try {
        console.log('üóëÔ∏è Iniciando reset completo...');
        
        // Limpar dados locais
        adminData.purchases = [];
        localStorage.removeItem('purchases');
        localStorage.removeItem('admin_purchases_backup');
        
        // Tentar limpar Firebase se dispon√≠vel
        if (typeof window.FirebaseDB !== 'undefined' && adminData.firebaseReady) {
            // Esta fun√ß√£o seria implementada no FirebaseDB se necess√°rio
            console.log('üî• Firebase reset seria executado aqui');
        }
        
        // Atualizar interface
        loadParticipants();
        updateDashboard();
        
        showNotification('‚úÖ Reset completo realizado com sucesso!', 'success');
        console.log('‚úÖ Reset completo finalizado');
        
    } catch (error) {
        console.error('‚ùå Erro durante reset:', error);
        showNotification(`‚ùå Erro durante reset: ${error.message}`, 'error');
    }
}

/**
 * Realizar sorteio
 */
async function performDraw() {
    console.log('üé≤ Iniciando sorteio...');
    
    const confirmedPurchases = adminData.purchases.filter(p => p.status === 'confirmed');
    
    if (confirmedPurchases.length === 0) {
        showNotification('‚ö†Ô∏è Nenhum participante confirmado para sorteio', 'warning');
        return;
    }
    
    // Coletar todos os n√∫meros vendidos
    const soldNumbers = [];
    confirmedPurchases.forEach(purchase => {
        if (Array.isArray(purchase.numbers)) {
            soldNumbers.push(...purchase.numbers);
        }
    });
    
    if (soldNumbers.length === 0) {
        showNotification('‚ö†Ô∏è Nenhum n√∫mero vendido para sorteio', 'warning');
        return;
    }
    
    // Simular sorteio
    const sortedNumbers = soldNumbers.sort(() => Math.random() - 0.5);
    const winners = {
        first: sortedNumbers[0],
        second: sortedNumbers[1] || null,
        third: sortedNumbers[2] || null
    };
    
    // Encontrar participantes ganhadores
    const findWinner = (number) => {
        return confirmedPurchases.find(p => p.numbers.includes(number));
    };
    
    const results = {
        first: { number: winners.first, participant: findWinner(winners.first) },
        second: winners.second ? { number: winners.second, participant: findWinner(winners.second) } : null,
        third: winners.third ? { number: winners.third, participant: findWinner(winners.third) } : null,
        timestamp: new Date().toISOString()
    };
    
    // Mostrar resultados
    let resultMessage = 'üéâ RESULTADOS DO SORTEIO\n\n';
    resultMessage += `ü•á 1¬∫ Lugar - N√∫mero ${winners.first.toString().padStart(3, '0')}\n`;
    resultMessage += `   ${results.first.participant?.buyerName || results.first.participant?.name || 'N/A'}\n\n`;
    
    if (results.second) {
        resultMessage += `ü•à 2¬∫ Lugar - N√∫mero ${winners.second.toString().padStart(3, '0')}\n`;
        resultMessage += `   ${results.second.participant?.buyerName || results.second.participant?.name || 'N/A'}\n\n`;
    }
    
    if (results.third) {
        resultMessage += `ü•â 3¬∫ Lugar - N√∫mero ${winners.third.toString().padStart(3, '0')}\n`;
        resultMessage += `   ${results.third.participant?.buyerName || results.third.participant?.name || 'N/A'}\n\n`;
    }
    
    alert(resultMessage);
    
    // Salvar resultados
    adminData.drawResults = results;
    localStorage.setItem('drawResults', JSON.stringify(results));
    
    showNotification('üéâ Sorteio realizado com sucesso!', 'success');
    console.log('‚úÖ Sorteio finalizado:', results);
}

/**
 * Fun√ß√µes auxiliares do painel
 */
function refreshData() {
    console.log('üîÑ Atualizando dados...');
    
    if (typeof window.FirebaseDB !== 'undefined' && adminData.firebaseReady) {
        loadPurchaseData();
    } else {
        loadParticipants();
        updateDashboard();
    }
    
    showNotification('üîÑ Dados atualizados!', 'success');
}

function exportData() {
    exportParticipants();
}

function openDrawModal() {
    performDraw();
}

/**
 * Buscar participante
 */
function searchParticipant() {
    const searchTerm = document.getElementById('participant-search')?.value?.toLowerCase();
    
    if (!searchTerm) {
        loadParticipants(); // Mostrar todos
        return;
    }
    
    const filteredPurchases = adminData.purchases.filter(purchase => {
        const name = (purchase.buyerName || purchase.name || '').toLowerCase();
        const phone = (purchase.buyerPhone || purchase.phone || '').toLowerCase();
        const numbers = (purchase.numbers || []).join(' ');
        
        return name.includes(searchTerm) || 
               phone.includes(searchTerm) || 
               numbers.includes(searchTerm);
    });
    
    // Temporariamente substituir dados para mostrar apenas resultados da busca
    const originalPurchases = adminData.purchases;
    adminData.purchases = filteredPurchases;
    loadParticipants();
    adminData.purchases = originalPurchases;
    
    showNotification(`üîç ${filteredPurchased.length} resultado(s) encontrado(s)`, 'info');
}